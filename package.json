{
  "name": "@goproperly/eslint-config-properly-base",
  "description": "Base ESLint config used by Properly",
  "license": "MIT",
  "author": "Properly",
  "homepage": "https://github.com/GoProperly/eslint-config-properly-base#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GoProperly/eslint-config-properly-base.git"
  },
  "bugs": {
    "url": "https://github.com/GoProperly/eslint-config-properly-base/issues"
  },
  "version": "1.7.1",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint .",
    "lint:fix": "eslint --fix . || true",
    "release": "semantic-release",
    "test": "echo \"No tests yet!\" && exit 0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@babel/eslint-parser": "^7.21.3",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1"
  },
  "peerDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^2.0.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.21.4",
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.1"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  }
}
